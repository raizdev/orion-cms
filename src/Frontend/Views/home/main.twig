{% block body %}
<div class="bg-lush-content-bg d-flex flex-column h-100">
  <div class="row py-4">
    <div class="col-lg-3">
      <div class="d-flex flex-column">
        <div class="news-featured-card card mb-15p">
          <div class="b-overlay-wrap position-relative">
            {% for news in data.news|slice(0,1) %}
            <a href="/article/{{news.id}}-{{news.slug}}">
              <div class="news-featured text-left mb-0 p-3" style="background-image: url({{news.header}});">
                <h5>{{news.title}}</h5>
                <div>{{news.short_story}}</div>
              </div>
            </a> 
            {% endfor %}
          </div>
        </div>
        <div class="d-flex flex-column flex-md-row">
          {% for news in data.news|slice(1,4) %}
          <a href="/article/{{news.id}}-{{news.slug}}">
            <div class="card mb-15p newsListCard col {% if loop.last %}{% else %}mr-15p{% endif %}">
              <div class="b-overlay-wrap position-relative d-flex flex-column h-100">
                <div class="newsListCardImage flex-shrink-0" style="background-image: url({{news.header}});"></div>
                <div class="text-lush-info-text pb-1 h-100 d-flex flex-column">
                  <a href="/article/{{news.id}}-{{news.slug}}" class="text-primary title bg-lush-bg-grey-1 px-2 mb-1 py-1 text-truncate">
                    {{news.title}}
                  </a>
                  <small class="d-block description px-2 py-1 text-truncate">{{news.short_story}}</small>
                  <div class="mt-auto px-2">
                    <hr class="mb-2 mt-0">
                    <div class="d-flex flex-row text-small justify-content-between small">
                      <div class="d-flex flex-row">
                        <img src="/assets/images/icons/user.png" class="mr-1">
                        <a href="/home/{{news.player.username}}" class="align-self-center text-primary">
                          {{news.player.username}}
                        </a>
                      </div>
                      <div class="d-flex flex-row">
                        <img src="/assets/images/icons/time.gif" class="mr-1">
                        <span class="align-self-center">{{news.timestamp|date("d-M H:i")}}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </a> 
          {% endfor %}
         </div>
      </div>
       <div class="card mb-15p">
         <div class="card-header">{{ lang('website.home.random_users' )}}</div>
         <div class="user-list-grid py-2"> 
            {% for user in data.randomUsers %}
            <a href="/home/{{user.username}}">
             <div class="card avatar-card" style="background-image: url(/assets/images/avatar_backgrounds/{{user.avatar_bg}}.gif);" data-toggle="tooltip" data-placement="top" title="{{user.username}}">
             <div class="habboImage" id="avatar-Envy">
               <img src="{{ config('website_settings.site.fpath')}}?figure={{user.look}}">
             </div>
           </div> 
           </a>
           {% endfor %}
          </div>
       </div>
     </div>
     <div class="col-lg-1">
       <div class="d-flex flex-column justify-content-between">
         <a href="https://twitter.com/hablushltd" target="_blank" class="llbtn2 mb-15p bg-twitter"> {{ lang('website.home.twitter' )}} </a>
         <a href="https://discord.gg/m96pgHrmfX" target="_blank" class="llbtn2 mb-15p bg-discord"> {{ lang('website.home.discord' )}} </a>
         <a href="https://www.facebook.com/hablushcom" target="_blank" class="llbtn2 mb-15p bg-facebook"> {{ lang('website.home.facebook' )}} </a>
       </div>
       <div class="card mb-15p">
         <div class="card-header orange">{{ lang('website.home.latest_badges' )}}</div>
         <div class="badge-list-grid"> 
           {% for badge, value in data.latestBadges %}
           <div>
             <div class="badge" style="background-image: url({{ config('hotel_settings.nitro')}}/assets/c_images/Badgeparts/{{badge}});"></div>
           </div> 
           {% endfor %}
          </div>
       </div>
     </div>
   </div>
 </div> 
 {% endblock %}
