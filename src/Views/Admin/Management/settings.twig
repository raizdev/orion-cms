{% extends "Admin/base.twig" %} {% block page %}Settings{% endblock %} {% block jsfile %}settings{% endblock %} {% block body %}
<div class="row">
    <div class="col-xl-12">
        <div class="kt-portlet">
            <div class="kt-portlet__body kt-portlet__body--fit">
                <div class="kt-grid">
                    <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v4__wrapper">
                        <div class="kt-wizard-v4__content" data-ktwizard-type="step-content">
                            <div class="kt-form__section kt-form__section--first">

                                <div class="accordion accordion-solid accordion-toggle-plus" id="serverPerm">
                                    <div class="card">
                                        <div class="card-header" id="headingOne6">
                                            <div class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne6" aria-expanded="false" aria-controls="collapseOne6">
                                                <i class="flaticon-interface-7"></i> API Settings
                                            </div>
                                        </div>
                                        <div id="collapseOne6" class="collapse" aria-labelledby="headingOne6" data-parent="#serverPerm" style="">
                                            <form method="post" action="settings/save">
                                            <div class="kt-portlet__body">
                                                <div class="kt-section kt-section--first">
                                                    <h3 class="kt-section__title">1. RCON API:</h3>
                                                    <div class="kt-section__body">
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API host:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="rcon_api_host" value="{{settings.rcon_api_host}}" class="form-control">
                                                                <span class="form-text text-muted">Please fill in here your ip from your rcon server</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API port:</label>
                                                            <div class="col-lg-6">
                                                                <input type="number" name="rcon_api_port" value="{{settings.rcon_api_port}}" class="form-control">
                                                                <span class="form-text text-muted">Please fill in here your ip from your port server</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API protocol:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="rcon_api_protocol" value="{{settings.rcon_api_protocol}}" class="form-control">
                                                                <span class="form-text text-muted">TCP or UDP</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API timeout:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="rcon_api_timeout" value="{{settings.rcon_api_timeout}}" class="form-control">
                                                                <span class="form-text text-muted">TCP or UDP</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API persistent:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="rcon_api_persistent" value="{{settings.rcon_api_persistent}}" class="form-control">
                                                                <span class="form-text text-muted">true or false</span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <h3 class="kt-section__title">2. Findretros API:</h3>
                                                    <div class="kt-section__body">
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">API host:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="findretros_api" value="{{settings.findretros_api}}" class="form-control">
                                                                <span class="form-text text-muted">Please fill in here the findretros API</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">Pagename:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="findretros_pagename" value="{{settings.findretros_pagename}}" class="form-control">
                                                                <span class="form-text text-muted">Please fill in here your findretros pagenamer</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">Timeout:</label>
                                                            <div class="col-lg-6">
                                                                <input type="number" name="findretros_timeout" value="{{settings.findretros_timeout}}" class="form-control">
                                                                <span class="form-text text-muted">Timeout request through findretros</span>
                                                            </div>
                                                        </div>
                                                         <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">Cloudflare:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="findretros_cloudflare" value="{{settings.findretros_cloudflare}}" class="form-control">
                                                                <span class="form-text text-muted">Are you using cloudflare? (Checkbox for yes)</span>
                                                            </div>
                                                        </div>
                                                         <div class="form-group row">
                                                            <label class="col-lg-3 col-form-label">Enabled:</label>
                                                            <div class="col-lg-6">
                                                                <input type="text" name="findretros_enabled" value="{{settings.findretros_enabled}}" class="form-control">
                                                                <span class="form-text text-muted">Are you using Findretros? (True or False)</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="kt-portlet__foot">
                                                <div class="kt-form__actions">
                                                    <input type="submit" class="btn btn-primary" value="Save">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                </div>
                                <div class="accordion accordion-solid accordion-toggle-plus" id="otherSettings">
                                    <form method="post" action="settings/save">
                                        <div class="card">
                                            <div class="card-header" id="headingOne5">
                                                <div class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne9" aria-expanded="false" aria-controls="collapseOne9">
                                                    <i class="flaticon-interface-7"></i> Currency Settings
                                                </div>
                                            </div>
                                            <div id="collapseOne9" class="collapse" aria-labelledby="headingOne5" data-parent="#otherSettings" style="">
                                                <div class="kt-portlet kt-portlet--height-fluid kt-portlet--mobile ">
                                                    <div class="kt-portlet__head kt-portlet__head--lg">
                                                        <div class="kt-portlet__head-label">
                                                            <span class="kt-portlet__head-icon">
                                                      <i class="kt-font-brand flaticon2-user"></i>
                                                      </span>
                                                            <h3 class="kt-portlet__head-title">
                                                         Currencys
                                                      </h3>
                                                        </div>
                                                        <div class="kt-portlet__head-toolbar">
                                                            <div class="kt-portlet__head-wrapper">
                                                                <div class="col-md-4 kt-tablet-and-mobile">
                                                                    <div class="kt-form__group kt-form__group--inline">
                                                                        <div class="kt-form__label">
                                                                            <button class="btn btn-secondary" type="button" data-toggle="modal" data-target="#editCategoryModal">Add</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="kt-portlet__body kt-portlet__body--fit">
                                                        <!--begin: Datatable -->
                                                        <div id="kt_datatable_chatlogs"></div>
                                                        <!--end: Datatable -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="accordion accordion-solid accordion-toggle-plus" id="otherSettings">
                                    <form method="post" action="settings/save">
                                        <div class="card">
                                            <div class="card-header" id="headingOne5">
                                                <div class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne3" aria-expanded="false" aria-controls="collapseOne3">
                                                    <i class="flaticon-interface-7"></i> Other settings
                                                </div>
                                            </div>
                                            <div id="collapseOne3" class="collapse" aria-labelledby="headingOne5" data-parent="#otherSettings" style="">
                                                <div class="kt-portlet__body">
                                                    <div class="kt-section kt-section--first">
                                                        <h3 class="kt-section__title">2. Settings</h3>
                                                        <div class="kt-section__body">
                                                            <div class="form-group row">
                                                                <label class="col-lg-3 col-form-label">Max regisratrion IP</label>
                                                                <div class="col-lg-3">
                                                                    <input type="number" name="registration_max_ip" value="{{settings.registration_max_ip}}" class="form-control">
                                                                    <span class="form-text text-muted">Max user registration per IP</span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-lg-3 col-form-label">Start credits:</label>
                                                                <div class="col-lg-6">
                                                                    <input type="text" class="form-control" name="start_credits" value="{{settings.start_credits}}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-lg-3 col-form-label">News upload path:</label>
                                                                <div class="col-lg-6">
                                                                    <input type="text" class="form-control" name="upload_path" value="{{settings.upload_path}}">
                                                                </div>
                                                            </div>
                                                        </div>  
                                                    </div>
                                                </div>
                                                <div class="kt-portlet__foot">
                                                    <div class="kt-form__actions">
                                                        <input type="submit" class="btn btn-primary" value="Save">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                 <div class="accordion accordion-solid accordion-toggle-plus" id="webShop">
                                    <form method="post" action="settings/save">
                                        <div class="card">
                                            <div class="card-header" id="headingOne5">
                                                <div class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne11" aria-expanded="false" aria-controls="collapseOne11">
                                                    <i class="flaticon-interface-7"></i> Shop Page
                                                </div>
                                            </div>
                                            <div id="collapseOne11" class="collapse" aria-labelledby="headingOne5" data-parent="#webShop" style="">
                                                <div class="kt-portlet__body">
                                                    <div class="kt-section kt-section--first">
                                                        <div class="kt-section__body">
                                                            <h3 class="kt-section__title">1. About The Shop
                                                            <textarea name="club_page_content" id="club_page_content" style="font-size: 6px;">{{settings.shop_about_the_shop}}</textarea>

                                                            <h3 class="kt-section__title">2. Terms & Conditions
                                                            <textarea name="club_page_content" id="club_page_content" style="font-size: 6px;">{{settings.shop_terms_and_conditions}}</textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="kt-portlet__foot">
                                                <div class="kt-form__actions">
                                                    <input type="submit" class="btn btn-primary" value="Save">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editCategoryModal" tabindex="-1" role="dialog" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryModalLabel">Add Currency</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="categoryName" class="form-control-label">Currency name:</label>
                        <input type="text" class="form-control" id="currency_name">
                    </div>
                   <div class="form-group">
                        <label for="categoryName" class="form-control-label">Currency type:</label>
                        <input type="text" class="form-control" id="currency_type">
                    </div>
                   <div class="form-group">
                        <label for="categoryName" class="form-control-label">Currency amount:</label>
                        <input type="number" class="form-control" id="currency_amount">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveCurrency">Save</button>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="/assets/admin/css/tagify.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/5.10.3/tinymce.min.js"></script>
{% endblock %}
